<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/dblue"  android:endColor="@color/dblue"
                android:angle="180" />
            <stroke android:width="1dip" android:color="@color/dblue" />
            <corners android:radius="1dip" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>


    <item >
        <shape>
            <gradient android:startColor="#077fff" android:endColor="#077fff"
                android:angle="180" />
            <stroke android:width="2dip" android:color="#077fff" />
            <corners android:radius="1dip" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>  
    
