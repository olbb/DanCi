<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="@color/dblue"  android:endColor="@color/dblue" 
                android:angle="180" /> 
            <stroke android:width="1dip" android:color="@color/dblue" /> 
            <corners android:radius="1dip" /> 
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" /> 
        </shape> 
    </item> 
  
    <item android:state_checked="true"  >

        <shape> 
            <gradient android:startColor="@color/orange"  android:endColor="@color/orange"
                android:angle="180" /> 
            <stroke android:width="1dip" android:color="#ffae00" />
            <corners android:radius="1dip" /> 
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" /> 
        </shape>

    </item> 
    
    <item android:state_enabled="false" > 
        <shape> 
            <gradient android:startColor="@color/grey"  android:endColor="@color/grey" 
                android:angle="180" /> 
            <stroke android:width="1dip" android:color="@color/dblue" /> 
            <corners android:radius="1dip" /> 
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" /> 
        </shape> 
    </item> 
  
    <item > 
        <shape> 
            <gradient android:startColor="@color/gblue" android:endColor="@color/gblue"
                android:angle="180" /> 
            <stroke android:width="2dip" android:color="@color/gblue" />
            <corners android:radius="1dip" /> 
            <padding android:left="10dp" android:top="10dp" 
                android:right="10dp" android:bottom="10dp" /> 
        </shape> 
    </item> 
</selector>  
    
