<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="237dp"
    android:layout_height="114dp"
    android:background="@drawable/barrier_item_background"
    android:layout_marginBottom="10dp"
     android:id="@+id/barrieritemroot">


    <View
        android:layout_height="114dp"
        android:layout_width="237dp"/>





        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:id="@+id/barrieritem_linear_1">


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/stagename"
             android:text="第几关" android:textSize="22sp" android:singleLine="true" android:textColor="@color/white"
                />

            <!--<RatingBar android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                <!--style="@style/mRatingBar" android:id="@+id/rate" android:layout_marginTop="10dp" />-->

            <RatingBar
                android:layout_height="wrap_content" style="@style/BarRatBar"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content" android:id="@+id/rate"/>


         </LinearLayout>

        <TextView android:layout_height="wrap_content" android:layout_width="100dp" android:id="@+id/stagenum"
            android:gravity="center" android:layout_centerVertical="true"
            android:textSize="60sp" android:text="10" android:typeface="serif" android:textColor="@color/white"/>
    
    <RelativeLayout
        android:layout_height="wrap_content" android:layout_centerVertical="true"
        android:layout_width="100dp" >

        <ImageView
            android:layout_height="wrap_content" android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:src="@drawable/stage_locked"
            android:visibility="gone"
            android:id="@+id/stage_locked"/>

    </RelativeLayout>


    <ImageView
        android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:visibility="gone"
        android:layout_alignParentRight="true" android:layout_margin="10dp" android:id="@+id/stage_gift"
        android:layout_width="wrap_content" android:src="@drawable/stage_gift" />


        


    
    

</RelativeLayout>
