<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:background="#dcdcdc">


    <LinearLayout
        android:layout_width="fill_parent" android:id="@+id/board_title"
        android:layout_height="100dp" android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content" android:layout_marginLeft="50dp"
            android:layout_height="wrap_content" android:src="@drawable/board_title"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="230dp" android:background="@drawable/board_userinfobg"
        android:layout_marginTop="100dp" android:layout_marginLeft="50dp"
        android:layout_height="600dp" android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent" android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp" android:layout_marginTop="90dp"
            android:layout_height="73dp">

                <ImageView
                    android:layout_width="74dp" android:src="@drawable/img"
                    android:layout_height="wrap_content" android:id="@+id/board_userimg" />




            <LinearLayout
                android:layout_width="wrap_content" android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/board_userimg"
                android:orientation="vertical" android:layout_marginLeft="15dp"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content" android:textColor="@color/white"
                    android:textSize="18sp" android:singleLine="true" android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content" android:id="@+id/board_username"
                    android:text="匿名" />

                <TextView
                    android:layout_width="wrap_content" android:textColor="@color/white"
                    android:layout_height="wrap_content" android:textSize="18sp" android:singleLine="true"
                    android:id="@+id/board_usergrade" android:text="没有数据"/>

                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content" android:text="总排名"
                android:textColor="@color/white" android:textSize="16sp"
                android:layout_marginTop="50dp" android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="90dp" android:textSize="75sp"
                android:textColor="@color/white" android:text="--" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:gravity="center"
                android:id="@+id/board_totalrank" android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content" android:text="本周排名"
                android:textColor="@color/white" android:textSize="16sp" android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />




            <TextView
                android:layout_width="90dp" android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content" android:textSize="75sp"
                android:layout_marginTop="10dp" android:id="@+id/board_weekrank"
                android:layout_marginLeft="20dp" android:text="--"/>

            <TextView
                android:layout_width="wrap_content" android:textColor="@color/white"
                android:layout_height="wrap_content" android:textSize="16sp"
                 android:id="@+id/board_totaltime"
               android:layout_marginTop="65dp"
                android:layout_marginLeft="20dp" android:text="总用时: 没有数据"/>




    </LinearLayout>



    <LinearLayout
        android:layout_width="455dp" android:orientation="vertical" android:layout_marginTop="100dp"
        android:layout_height="600dp" android:layout_marginLeft="300dp" android:background="@color/white"
        android:id="@+id/board_total_view">

        <LinearLayout
            android:layout_width="match_parent" android:background="#009cff"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent" android:text="总排行"  android:textSize="32sp"
                android:layout_height="match_parent" android:textColor="@color/white"
                android:layout_marginLeft="22dp" android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="wrap_content" android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:text="姓名" android:textSize="18sp" android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:text="总用时" android:textSize="18sp" android:layout_marginLeft="140dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:layout_marginLeft="145dp"
                android:text="名次" android:textSize="18sp"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <!--<include layout="@layout/board_item"/>-->

        <ListView
            android:layout_width="match_parent" android:id="@+id/list_total"
            android:layout_height="match_parent"  android:clickable="false"/>

        <ProgressBar
            android:layout_width="wrap_content" style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large.Inverse"
            android:layout_height="wrap_content" android:layout_marginTop="-350dp" android:id="@+id/prog2"
            android:layout_marginLeft="200dp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="455dp" android:orientation="vertical" android:layout_marginTop="100dp"
        android:layout_height="600dp" android:layout_marginLeft="775dp" android:background="@color/white"
        android:id="@+id/board_week_view">

        <LinearLayout
            android:layout_width="match_parent" android:background="#3bd100"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent" android:text="本周排行"  android:textSize="32sp"
                android:layout_height="match_parent" android:textColor="@color/white"
                android:layout_marginLeft="22dp" android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="wrap_content" android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:text="姓名" android:textSize="18sp" android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:text="总用时" android:textSize="18sp" android:layout_marginLeft="140dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content" android:textColor="#acacac"
                android:layout_marginLeft="145dp"
                android:text="名次" android:textSize="18sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<include layout="@layout/board_item"/>-->

        <ListView
            android:layout_width="match_parent" android:id="@+id/list_week"
            android:layout_height="match_parent" />

        <ProgressBar
            android:layout_width="wrap_content" style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large.Inverse"
            android:layout_height="wrap_content" android:layout_marginTop="-350dp" android:id="@+id/prog1"
            android:layout_marginLeft="200dp" />

    </LinearLayout>

    
    
    
   <LinearLayout
       android:layout_width="wrap_content" android:layout_centerInParent="true"
       android:layout_height="wrap_content" android:orientation="vertical"
       android:gravity="center" android:id="@+id/board_nowifi" android:visibility="gone">

       <ImageView
           android:layout_width="wrap_content" android:src="@drawable/no_wifi"
           android:layout_marginBottom="50dp"
           android:layout_height="wrap_content" />

       <Button
           android:layout_width="wrap_content" android:text="      网络设置      "
           android:textSize="25sp" android:layout_marginTop="25dp"
           android:id="@+id/board_gonetsetting"
           android:layout_height="wrap_content" style="@style/TBtn"
           android:paddingTop="6dp" android:paddingBottom="6dp"/>
       
       </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content" android:layout_centerInParent="true"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:gravity="center" android:id="@+id/board_nonetid" android:visibility="gone">

        <TextView
            android:layout_width="wrap_content" android:textSize="30sp"
            android:layout_height="wrap_content"
            android:text="你尚未注册网校\n无法使用排行榜\n请注册" />



    </LinearLayout>






<LinearLayout android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"  android:visibility="gone">

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_getzb"
        android:layout_height="wrap_content" android:text="获取周榜"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_getrb"
        android:layout_height="wrap_content" android:text="获取日榜"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_gettg"
        android:layout_height="wrap_content" android:text="获取通关榜"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_uploadimg"
        android:layout_height="wrap_content" android:text="更新用户头像"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_getuserinfo"
        android:layout_height="wrap_content" android:text="获取用户信息"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_adduser"
        android:layout_height="wrap_content" android:text="添加用户"/>

    <Button
        android:layout_width="wrap_content" android:id="@+id/test_updateuser"
        android:layout_height="wrap_content" android:text="更新用户"/>

</LinearLayout>

</RelativeLayout>