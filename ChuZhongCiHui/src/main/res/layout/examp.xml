<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/exampbg"
     >

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:src="@drawable/exampbg"/>

    <LinearLayout android:layout_width="400dp" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginLeft="50dp" android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        >

        <TextView   android:textSize="25sp"
                android:text="This is an apple."
                android:layout_width="wrap_content" android:id="@+id/exampen"
                android:layout_height="wrap_content"/>

        <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="20sp" android:id="@+id/exampcn" android:text="这是一个苹果"
                  android:layout_marginTop="15dp"       />


    </LinearLayout>

</RelativeLayout>
