<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="370dp"
    android:background="@color/white">

    <!--<View android:layout_width="5dp" android:layout_height="40dp" android:layout_marginTop="16dp"-->
    <!--android:background="@color/gblue" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="474dp"
        android:textSize="35sp"
        android:id="@+id/tipstitle"
        android:text="系统设置"
        android:textColor="#000000" />

    <!--<View  android:layout_width="fill_parent" android:layout_height="2dp"-->
    <!--android:background="@color/gblue" android:layout_marginTop="70dp"/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="答题计时"
            android:textColor="#ff7300" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeline"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box"
                android:text="30秒"
                android:id="@+id/time30s"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginRight="30dp"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box"
                android:text="20秒"
                android:id="@+id/time20s"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box"
                android:text="10秒"
                android:id="@+id/time10s"
                android:textColor="#000000"
                android:textSize="25sp" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="拼写选项"
            android:textColor="#00bf17"
            android:layout_marginTop="15dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userintype"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box"
                android:id="@+id/bytouch"
                android:textSize="25sp"
                android:textColor="#000000"
                android:text="手写"
                android:layout_marginRight="30dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:checked="true"
                android:button="@drawable/check_box"
                android:id="@+id/bykeyboard"
                android:textSize="25sp"
                android:text="键盘输入"
                android:layout_marginRight="30dp" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="476dp">

        <Button
            style="@style/DefBtn"
            android:layout_width="220dp"
            android:text="保存设置"
            android:id="@+id/saveconfig" />

        <Button
            style="@style/DefBtn"
            android:layout_width="220dp"
            android:text="退出"
            android:id="@+id/exitconfig" />

    </LinearLayout>


</RelativeLayout>