<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="@android:windowBackground">@color/white</item>
        <item name="android:splitMotionEvents">false</item>

    </style>


    <style name="DefBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/def</item>
        <item name="android:textColor">@drawable/deftextcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>


    </style>

    <style name="WarnBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/warnbtnbg</item>
        <item name="android:textColor">@drawable/deftextcolor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>


    </style>

    <style name="TBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/normalbtn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="OthBtn" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/other</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="RadioBtn" parent="android:Widget.Holo.CompoundButton.RadioButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/radiobtn</item>
        <item name="android:button">@drawable/ckbtn</item>
        <item name="android:paddingLeft">1dp</item>


    </style>

    <style name="mRatingBar" parent="android:Widget.DeviceDefault.Light.RatingBar.Small">

        <item name="android:progressDrawable">@drawable/m_ratingbar</item>

    </style>

    <style name="BarRatBar" parent="android:Widget.DeviceDefault.Light.RatingBar.Small">

        <item name="android:progressDrawable">@drawable/bar_ratingbar</item>

    </style>


    <style name="PinProgressButton">

        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>

    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


</resources>