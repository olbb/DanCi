<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#568721" android:endColor="#568721" android:angle="180" />
            <stroke android:width="1dip" android:color="@color/white" />
            <corners android:radius="1dip" />
            <padding android:left="20dp" android:top="10dp" android:right="20dp" android:bottom="10dp" />
        </shape>


    </item>


    <item>
        <shape>
            <gradient android:startColor="@color/dgreen" android:endColor="@color/dgreen" android:angle="180" />
            <stroke android:width="2dip" android:color="@color/white" />
            <corners android:radius="1dip" />
            <padding android:left="20dp" android:top="10dp" android:right="20dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>  
    
